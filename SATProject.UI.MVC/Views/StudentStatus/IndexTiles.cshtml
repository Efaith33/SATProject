@model IEnumerable<SATProject.DATA.EF.StudentStatus>
@{
    ViewBag.Title = "Student Status Tiles";
}



<div class="m-5">
    <div class="mb-4"><h2 class="text-center">@ViewBag.Title</h2></div>
    <div class="mb-5">
        <div class="row">
            <div class="mb-3">
                @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
                @if (User.Identity.IsAuthenticated)
                {
                    @Html.ActionLink("Table View", "Index", "StudentStatus", null, new { @class = "btn btn-primary" })
                }
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
            </div>
            <hr />
        </div>
        <div class="row m-3 col-md-12">
            @foreach (var item in Model)
            {
                <div class="col-md-5 m-5 text-center card card-span h-100 shadow">
                    <div id="sstiles" class="pt-2"> <h3><a href="@Url.Action("Index", "Students", new { id = item.SSID })">@item.SSName</a></h3></div>
                    <div>
                        <div class="text-center p-2">
                            @Html.ActionLink("Details", "Details", new { id = item.SSID })
                        </div>
                        <div class="row">
                            <div class="text-center p-2">
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <div class="p-2">@Html.ActionLink("Delete", "Delete", new { id = item.SSID })</div>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.SSID })
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>
</div>


