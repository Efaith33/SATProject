@model IEnumerable<SATProject.DATA.EF.StudentStatus>
@{
    ViewBag.Title = "Student Status Tiles";
}



<div class="m-5">
    <div class="mb-4"><h2 class="text-center">@ViewBag.Title</h2></div>
    <div class="mb-5">
        <div class="row">
            <div class="mb-5">
                @Html.ActionLink("Create New", "Create")
                @if (User.Identity.IsAuthenticated)
                {
                    @Html.ActionLink("Table View", "Index", "StudentStatus")
                }
            </div>
            @Html.ActionLink("Back to List", "Index")
        </div>
        <div>
            @foreach (var item in Model)
            {
                <div class="p-2">
                    <div class="text-center">
                        <div class=" col-md-4 card card-span h-100 shadow">
                            <div>
                                <h3><a href="@Url.Action("Index", "Students", new { id = item.SSID })">@item.SSName</a></h3>
                                <div class="text-center p-2">
                                    @Html.ActionLink("Details", "Details", new { id = item.SSID })
                                </div>
                                <div class="row">
                                    <div class="text-center p-2">
                                        @if (User.Identity.IsAuthenticated)
                                        {
                                            <div class="p-2">@Html.ActionLink("Delete", "Delete", new { id = item.SSID })</div>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.SSID })
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            }
        </div>

    </div>
</div>


