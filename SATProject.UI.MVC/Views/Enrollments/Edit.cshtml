@model SATProject.DATA.EF.Enrollment

@{
    ViewBag.Title = "Edit " + Model.Student.FullName + " Enrollment";
}

<div class="m-2">
    <div class="text-center">
        <h2>@ViewBag.Title</h2>
        <h4>Enrollment</h4>
    </div>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.EnrollmentId)

            <div class="form-group row">
                <div class="col-md-2 p-3" style="text-align:right">
                    @Html.LabelFor(model => model.Student.FullName, "Student", htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-md-8 p-2">
                    @Html.DropDownList("StudentId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.StudentId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-2 p-3" style="text-align:right">
                    @Html.LabelFor(model => model.ScheduledClassId, "Class Info", htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-md-8 p-2">
                    @Html.DropDownList("ScheduledClassId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ScheduledClassId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-2 p-3" style="text-align:right">
                    @Html.LabelFor(model => model.EnrollmentDate, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-md-8 p-2">
                    @Html.EditorFor(model => model.EnrollmentDate, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.EnrollmentDate, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row text-center">
                <div class="p-2">
                    <input type="submit" value="Save" class="btn btn-secondary" />
                </div>
                <div>
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
